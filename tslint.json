{
  "extends": ["tslint:latest", "tslint-react", "tslint-config-standard", "tslint-config-prettier"],
  "rulesDirectory": ["tslint-plugin-prettier"],
  "rules": {
    "prettier": [true, "./.prettierrc"],
    "no-debugger": false,
    // as we want to chain interfaces, we need to allow empty interfaces
    "no-empty-interface": false,
    // "no-any": true,
    "no-implicit-dependencies": false,
    "no-submodule-imports": false,
    "no-require-imports": false,
    "max-classes-per-file": [true, 1],
    "no-namespace": false,
    "no-use-before-declare": false,
    "return-undefined": true,
    "no-unnecessary-type-assertion": false,
    "arrow-return-shorthand": true,
    "callable-types": true,
    "jsx-boolean-value": false,
    "jsx-curly-spacing": true,
    "jsx-use-translation-function": true,
    "curly": true,
    "import-blacklist": [true, "rxjs/Rx"],
    "comment-format": [true, "check-space"],
    "deprecation": {
      "severity": "warn"
    },
    "no-default-import": [
      true,
      {
        "fromModules": "moment"
      }
    ],
    "indent": [true, "spaces"],
    "no-construct": true,
    "no-duplicate-super": true,
    "no-shadowed-variable": true,
    "no-string-literal": false,
    "no-trailing-whitespace": true,
    "no-inferrable-types": true,
    "no-unused-expression": true,
    "no-var-keyword": true,
    "one-line": [true, "check-open-brace", "check-catch", "check-else", "check-whitespace"],
    "prefer-const": true,
    "quotemark": [true, "single"],
    "interface-over-type-literal": true,
    "no-for-in-array": true,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "restrict-plus-operands": true,
    "triple-equals": [true, "allow-null-check"],
    "max-line-length": [true, 120],
    "variable-name": {
      "options": ["ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case"]
    },
    "semicolon": false,
    "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-separator", "check-type"],
    "unified-signatures": true,
    "ordered-imports": [
      false,
      {
        "import-sources-order": "any",
        "named-imports-order": "case-insensitive",
        "grouped-imports": true
      }
    ],
    "strict-type-predicates": false,
    "object-literal-sort-keys": false
  }
}
